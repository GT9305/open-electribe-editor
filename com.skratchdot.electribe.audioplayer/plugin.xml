<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.skratchdot.electribe.audioplayer.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="com.skratchdot.electribe.audioplayer.commands.loopCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+NUMPAD_0"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
      <key
            commandId="com.skratchdot.electribe.audioplayer.commands.playCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+NUMPAD_1"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
      <key
            commandId="com.skratchdot.electribe.audioplayer.commands.pauseCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+NUMPAD_2"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
      <key
            commandId="com.skratchdot.electribe.audioplayer.commands.stopCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+NUMPAD_3"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.commandImages">
      <image
            commandId="com.skratchdot.electribe.audioplayer.commands.loopCommand"
            disabledIcon="icons/btn_loop_disabled.gif"
            icon="icons/btn_loop.gif">
      </image>
      <image
            commandId="com.skratchdot.electribe.audioplayer.commands.playCommand"
            disabledIcon="icons/btn_play_disabled.gif"
            icon="icons/btn_play.gif">
      </image>
      <image
            commandId="com.skratchdot.electribe.audioplayer.commands.pauseCommand"
            disabledIcon="icons/btn_pause_disabled.gif"
            icon="icons/btn_pause.gif">
      </image>
      <image
            commandId="com.skratchdot.electribe.audioplayer.commands.stopCommand"
            disabledIcon="icons/btn_stop_disabled.gif"
            icon="icons/btn_stop.gif">
      </image>
      <image
            commandId="com.skratchdot.electribe.audioplayer.commands.playOrLoopCommand"
            disabledIcon="icons/btn_loop_disabled.gif"
            icon="icons/btn_loop.gif">
      </image>
   </extension>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="Audio Player Category"
            id="com.skratchdot.electribe.audioplayer.commands.category">
      </category>
      <command
            name="Loop"
            categoryId="com.skratchdot.electribe.audioplayer.commands.category"
            id="com.skratchdot.electribe.audioplayer.commands.loopCommand">
      </command>
      <command
            name="Play"
            categoryId="com.skratchdot.electribe.audioplayer.commands.category"
            id="com.skratchdot.electribe.audioplayer.commands.playCommand">
      </command>
      <command
            name="Pause"
            categoryId="com.skratchdot.electribe.audioplayer.commands.category"
            id="com.skratchdot.electribe.audioplayer.commands.pauseCommand">
      </command>
      <command
            name="Stop"
            categoryId="com.skratchdot.electribe.audioplayer.commands.category"
            id="com.skratchdot.electribe.audioplayer.commands.stopCommand">
      </command>
      <command
            categoryId="com.skratchdot.electribe.audioplayer.commands.category"
            id="com.skratchdot.electribe.audioplayer.commands.playOrLoopCommand"
            name="Play/Loop">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="com.skratchdot.electribe.audioplayer.commands.loopCommand"
            class="com.skratchdot.electribe.audioplayer.handlers.LoopAndPlayHandler">
      </handler>
      <handler
            commandId="com.skratchdot.electribe.audioplayer.commands.playCommand"
            class="com.skratchdot.electribe.audioplayer.handlers.LoopAndPlayHandler">
      </handler>
      <handler
            commandId="com.skratchdot.electribe.audioplayer.commands.pauseCommand"
            class="com.skratchdot.electribe.audioplayer.handlers.PauseHandler">
      </handler>
      <handler
            commandId="com.skratchdot.electribe.audioplayer.commands.stopCommand"
            class="com.skratchdot.electribe.audioplayer.handlers.StopHandler">
      </handler>
      <handler
            class="com.skratchdot.electribe.audioplayer.handlers.LoopAndPlayHandler"
            commandId="com.skratchdot.electribe.audioplayer.commands.playOrLoopCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=edit">
         <menu
               id="audioPlayerMenu"
               label="Audio Player">
            <command
                  commandId="com.skratchdot.electribe.audioplayer.commands.loopCommand"
                  id="loopCommand"
                  mnemonic="L"
                  tooltip="LOOP">
            </command>
            <command
                  commandId="com.skratchdot.electribe.audioplayer.commands.playCommand"
                  id="playCommand"
                  mnemonic="P"
                  tooltip="PLAY">
            </command>
            <command
                  commandId="com.skratchdot.electribe.audioplayer.commands.pauseCommand"
                  id="pauseCommand"
                  mnemonic="A"
                  tooltip="PAUSE">
            </command>
            <command
                  commandId="com.skratchdot.electribe.audioplayer.commands.stopCommand"
                  id="stopCommand"
                  mnemonic="S"
                  tooltip="STOP">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="audioPlayerToolbar">
            <command
                  commandId="com.skratchdot.electribe.audioplayer.commands.loopCommand"
                  id="loopCommand"
                  mnemonic="L"
                  tooltip="LOOP">
            </command>
            <command
                  commandId="com.skratchdot.electribe.audioplayer.commands.playCommand"
                  id="playCommand"
                  mnemonic="P"
                  tooltip="PLAY">
            </command>
            <command
                  commandId="com.skratchdot.electribe.audioplayer.commands.pauseCommand"
                  id="pauseCommand"
                  mnemonic="A"
                  tooltip="PAUSE">
            </command>
            <command
                  commandId="com.skratchdot.electribe.audioplayer.commands.stopCommand"
                  id="stopCommand"
                  mnemonic="S"
                  tooltip="STOP">
            </command>
         </toolbar>
      </menuContribution>
      <menuContribution
            locationURI="popup:com.skratchdot.electribe.model.esx.presentation.EsxEditorPartSamples.SampleListContextMenu?before=edit">
         <separator
               name="playOrLoopCommand"
               visible="true">
         </separator>
         <command
               commandId="com.skratchdot.electribe.audioplayer.commands.playOrLoopCommand"
               id="playOrLoopCommand"
               tooltip="Play or Loop depending on preference setting.">
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:com.skratchdot.electribe.fileexplorer.views.TableView?after=additions">
         <command
               commandId="com.skratchdot.electribe.audioplayer.commands.playOrLoopCommand"
               id="playOrLoopCommand"
               tooltip="Play or Loop depending on preference setting.">
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:com.skratchdot.electribe.fileexplorer.views.TreeView?after=additions">
         <command
               commandId="com.skratchdot.electribe.audioplayer.commands.playOrLoopCommand"
               id="playOrLoopCommand"
               tooltip="Play or Loop depending on preference setting.">
         </command>
      </menuContribution>
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=edit">
         <menu
               id="audioPlayer"
               label="Audio Player">
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="com.skratchdot.electribe.audioplayer.preferences.PreferencePageAudioPlayer"
            id="com.skratchdot.electribe.audioplayer.preferences.PreferencePageAudioPlayer"
            name="Audio Player Preferences">
      </page>
   </extension>

</plugin>
